{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "module": "esNext",
    "moduleResolution": "nodenext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "build",
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
